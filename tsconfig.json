{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "rootDir": "./src",
        "esModuleInterop": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/**/*",
        "externalFileTypes.d.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist/**/*",
        "webpack*.*"
    ]
}